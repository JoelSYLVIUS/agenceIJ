{% extends  '::base.html.twig' %}

{% block title %}Bienvenue sur AIJ !{% endblock %}

{% block stylesheets %}
<style>
h1, p{
        margin-top: 150px;
}
h1{
        font-size: 100px;
        text-shadow: 2px 2px  1px #ffffff;
}
p{
        font-size: 30px;
        text-shadow: 2px 2px  1px #ffffff;
}
section.section{
        padding-top: 20px;
}
.parallax-container {
      height: 80vh;
    }
</style>
{% endblock %}
{% block body %}

<div class="parallax-container">
      <div class="parallax"><img src="{{ asset('medias/persian-leopard.jpg') }}"></div>
      <div class="container center">
              <h1>{{titre}}</h1>
              <p> {{slogan}}</p>
      </div>
</div>
<section class="section">
        <div class="container">
                <div class="row">
                        <article class="col s6">
                                <h2>Nous</h2>
                                <section>
                                        <h3>Isaac Ekamonle</h3>
                                        <p>Etudiant à l'ICAN</p>
                                </section>
                                <section>
                                        <h3>Joël SYLVIUS</h3>
                                        <p>Etudiant à l'ESGI</p>
                                </section>
                        </article>
                        <article class="col s6">
                                <h2>Contact</h2>
                                <div class="row">
                                        <form class="col s12">
                                                <div class="row">
                                                        <div class="input-field col s6">
                                                                <i class="material-icons prefix">account_circle</i>
                                                                <input id="first_name" type="text" class="validate">
                                                                <label for="first_name">First Name</label>
                                                        </div>
                                                        <div class="input-field col s6">
                                                                <i class="material-icons prefix">person</i>
                                                                <input id="last_name" type="text" class="validate">
                                                                <label for="last_name">Last Name</label>
                                                        </div>
                                                </div>
                                                <div class="row">
                                                        <div class="input-field col s12">
                                                                <i class="material-icons prefix">mode_edit</i>
                                                                <select>
                                                                        <option value="" disabled selected>Choisissez votre sujet</option>
                                                                        <option value="1">site web</option>
                                                                        <option value="2">emailing</option>
                                                                        <option value="3">SEO</option>
                                                                </select>
                                                                <label>Objet</label>
                                                        </div>
                                                </div>
                                                <div class="row">
                                                        <div class="input-field col s12">
                                                                <i class="material-icons prefix">email</i>
                                                                <input id="email" type="email" class="validate">
                                                                <label for="email">Email</label>
                                                        </div>
                                                </div>
                                                <div class="row">
                                                        <div class="input-field col s12">
                                                                <i class="material-icons prefix">mode_edit</i>
                                                                <textarea id="textarea1" class="materialize-textarea"></textarea>
                                                                <label for="textarea1">Textarea</label>
                                                        </div>
                                              </div>
                                              <div class="row">
                                                        <div class="input-field col s12">
                                                                        <input class="waves-effect waves-light btn" type="submit" name="submit" value="Envoyer">
                                                        </div>
                                              </div>
                                        </form>
                                </div>
                        </article>
                </div>
        </div>
</section>



{% endblock %}

{% block javascripts %}
<script>
        $(document).ready(function(){
                $('.parallax').parallax();
                $('select').material_select();
        });
    </script>

{% endblock %}
